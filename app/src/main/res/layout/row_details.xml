<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Title_textView"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:id="@+id/poster_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Title_textView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Rating_textView"
        android:layout_below="@+id/Title_textView"
        android:layout_toRightOf="@+id/poster_imageView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Release Date:"
        android:id="@+id/textView"
        android:layout_below="@+id/Rating_textView"
        android:layout_toRightOf="@+id/poster_imageView"
        android:layout_toEndOf="@+id/poster_imageView"
        android:layout_marginTop="91dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/Date_textView"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/poster_imageView"
        android:layout_toEndOf="@+id/poster_imageView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/plot_textView"
        android:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/poster_imageView"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/fav_Button"
        android:src="@android:drawable/btn_star_big_off"
        android:layout_below="@+id/Rating_textView"
        android:layout_toRightOf="@+id/poster_imageView"
        android:layout_toEndOf="@+id/poster_imageView"
        android:background="#00ffffff" />  <!--transparent  -->

</RelativeLayout>